<h1>商品詳細</h1>
<nav class="nav justify-content-end">
  <%= link_to '一覧', admin_products_path, class: 'nav-link' %>
</nav>
<table class="table table-hover">
  <tbody>
    <tr>
      <th><%= Item.human_attribute_name(:id) %></th>
      <td><%= @item.id %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:no) %></th>
      <td><%= @item.no %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:name) %></th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:price) %></th>
      <td><%= @item.price %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:description) %></th>
      <td><%= @item.description %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:created_at) %></th>
      <td><%= @item.created_at %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:updated_at) %></th>
      <td><%= @item.updated_at %></td>
    </tr>
  </tbody>
</table>
<%= link_to '編集', edit_admin_product_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', admin_product_path(@item), data: { turbo_method: :delete, turbo_confirm: "商品「#{@item.name}」を削除します。よろしいですか？"}, class: 'btn btn-danger' %>
