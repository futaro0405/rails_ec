<h1>order index</h1>
<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
      <tr>
        <th scope="col"><%= Order.human_attribute_name(:firstname) %></th>
        <th scope="col"><%= Order.human_attribute_name(:lastname) %></th>
        <th scope="col"><%= Order.human_attribute_name(:username) %></th>
        <th scope="col"><%= Order.human_attribute_name(:email) %></th>
        <th scope="col"><%= Order.human_attribute_name(:created_at) %></th>
        <th scope="col"><%= Order.human_attribute_name(:updated_at) %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.firstname, admin_checkout_path(order) %></td>
          <td><%= link_to order.lastname, admin_checkout_path(order) %></td>
          <td><%= link_to order.username, admin_checkout_path(order) %></td>
          <td><%= link_to order.email, admin_checkout_path(order) %></td>
          <td><%= link_to order.created_at, admin_checkout_path(order) %></td>
          <td><%= link_to order.updated_at, admin_checkout_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
